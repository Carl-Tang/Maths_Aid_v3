         <font>
            <Font size="15.0" />
         </font></Label>
      <Button fx:id="_startButton" alignment="CENTER" mnemonicParsing="false" onAction="#startButtonClicked" prefHeight="60.0" prefWidth="140.0" text="Start" />
   </children>
</VBox>
