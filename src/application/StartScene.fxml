<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.StartSceneController">
   <children>
      <Label text="Taatai">
         <font>
            <Font name="System Bold" size="48.0" />
         </font>
      </Label>
